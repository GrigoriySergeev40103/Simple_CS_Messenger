<Window x:Class="CSMessanger.PrivateMessagesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSMessanger"
        mc:Ignorable="d"
        Title="PrivateMessagesWindow" Height="450" Width="800">
    <Grid>
        <Grid HorizontalAlignment="Left" Height="420" VerticalAlignment="Top" Width="794" Margin="0,0,-0.4,0">
            <Button x:Name="BackButton" Content="Back" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Height="27" Click="BackButton_Click"/>
            <Label x:Name="InterlocutorNameLabel" Content="" HorizontalAlignment="Left" Margin="75,1,0,0" VerticalAlignment="Top" Width="719"/>
            <Button x:Name="SendButton" Content="Send" HorizontalAlignment="Left" Margin="700,383,0,0" VerticalAlignment="Top" Width="94" Height="37" Click="SendButton_Click"/>
            <ListBox x:Name="PrivateMessagesListBox" HorizontalAlignment="Left" Height="356" Margin="0,27,0,0" VerticalAlignment="Top" Width="794"/>
            <TextBox x:Name="MessageTextBox" HorizontalAlignment="Left" Height="37" Margin="0,383,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="700"/>
        </Grid>

    </Grid>
</Window>
