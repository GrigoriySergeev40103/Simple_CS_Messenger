<Window x:Class="CSMessanger.GroupChatMessagesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSMessanger"
        mc:Ignorable="d"
        Title="GroupChatMessagesWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="BackButton" Content="Back" HorizontalAlignment="Left" VerticalAlignment="Top" Width="101" Height="33" MouseLeftButtonUp="BackButton_MouseLeftButtonUp"/>
        <ListBox x:Name="MessagesListBox" HorizontalAlignment="Left" Height="338" Margin="0,33,-0.4,0" VerticalAlignment="Top" Width="794"/>
        <TextBox x:Name="MessageTextBox" HorizontalAlignment="Left" Height="49" Margin="0,371,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="656"/>
        <Button x:Name="SendButton" Content="Send" HorizontalAlignment="Left" Margin="656,371,-0.4,0" VerticalAlignment="Top" Width="138" Height="49" MouseLeftButtonUp="SendButton_MouseLeftButtonUp"/>
        <Label x:Name="GroupChatNameLabel" Content="" HorizontalAlignment="Left" Margin="101,0,-0.4,0" VerticalAlignment="Top" Height="33" Width="693"/>

    </Grid>
</Window>
