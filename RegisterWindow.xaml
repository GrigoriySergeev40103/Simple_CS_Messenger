<Window x:Class="CSMessanger.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSMessanger"
        mc:Ignorable="d"
        Title="RegisterWindow" Height="450" Width="800">
    <Grid>
        <Grid>
            <StackPanel HorizontalAlignment="Left" Height="400" Margin="10,10,0,0" VerticalAlignment="Top" Width="774">
                <Label Content="Login:"/>
                <TextBox x:Name="LoginTextBox" Height="23" TextWrapping="Wrap"/>
                <Label Content="Password:"/>
                <PasswordBox x:Name="PwdBox"/>
                <Label Content="Repeat password:"/>
                <PasswordBox x:Name="PwdRepeatBox"/>
                <TextBlock x:Name="ErrorMsgTextBlock" TextWrapping="Wrap"/>
                <Button x:Name="RegisterButton" Content="Register" Click="RegisterButton_Click"/>
            </StackPanel>
        </Grid>

    </Grid>
</Window>
